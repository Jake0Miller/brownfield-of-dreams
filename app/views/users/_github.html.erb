<section>
  <h1>GitHub</h1>

  <section><h3>Repositories</h3>
    <% facade.repositories.each do |repository| %>
      <ul class="repository">
        <li class="name" id="repository-#{repository.name}"><%= link_to repository.name, repository.url %></li>
      </ul>
    <% end %>
  </section>

  <section><h3>Followers</h3>
    <% facade.followers.each do |follower| %>
      <ul class="follower">
        <li class="handle" id="follower-#{follower.login}"><%= link_to follower.login, follower.url %></li>
				#if follower.login == User.nickname, Add as Friend
      </ul>
    <% end %>
  </section>

  <section><h3>Following</h3>
    <% facade.following.each do |following| %>
      <ul class="following">
        <li class="handle" id="following-#{following.login}"><%= link_to following.login, following.url %></li>
      </ul>
    <% end %>
  </section>
</section>
