<section>
  <h1>GitHub</h1>

  <section><h3>Repositories</h3>
    <% facade.repositories.each do |repository| %>
      <ul class="repository">
        <li class="name" id="repository-#{repository.name}"><%= link_to repository.name, repository.url %></li>
      </ul>
    <% end %>
  </section>

  <section class='followers'><h3>Followers</h3>
    <% facade.followers.each do |follower| %>
      <ul class="follower">
        <li class="handle" id="follower-#{follower.login}">
					<%= link_to follower.login, follower.url %>

					<% if @current_user.friendable?(follower) %>
						<%= button_to "Add as Friend", friendships_path(follower.user_id), class: "btn btn-primary mb1 bg-teal" %>
					<% end %>
				</li>
      </ul>
    <% end %>
  </section>

  <section class='followings'><h3>Following</h3>
    <% facade.following.each do |following| %>
      <ul class="following">
        <li class="handle" id="following-#{following.login}">
					<%= link_to following.login, following.url %>

					<% if @current_user.friendable?(following) %>
						<%= button_to "Add as Friend", friendships_path(following), class: "btn btn-primary mb1 bg-teal" %>
					<% end %>
				</li>
      </ul>
    <% end %>
  </section>

	<section class='friends'><h3>Friends</h3>
    <% facade.friends.each do |friend| %>
			<ul class="friend">
				<li class="handle" id="friend-#{friend.login}">
					<%= link_to friend.login, friend.url %>
				</li>
			</ul>
    <% end %>
  </section>
</section>
